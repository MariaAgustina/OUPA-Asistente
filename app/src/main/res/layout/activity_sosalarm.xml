<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SOSAlarmActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sosAlert"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarmMessageText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="mau capo te está solicitando ayuda"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Su ubicación es"
            android:textSize="25sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/location_alarm"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/fiuba_location">
        </LinearLayout>

        <Button
            android:id="@+id/aceptButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:text="Aceptar"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>